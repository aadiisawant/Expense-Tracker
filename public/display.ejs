<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <%- include('layout/nav.ejs'); %>
    <div class="display-container">
    <div class="display">
        <table>
            <tr>
                <th>Date</th>
                <th>Note</th>
                <th>Amount</th>
                <!-- <th>Action</th> -->
            </tr>
            <%
                expense.forEach(ex=>{
                    %>
                    <tr>
                        <td><%=ex.date %></td>
                        <td><%=ex.note %></td>
                        <td><%
                            if(ex.type == "credit"){
                                %>
                                    <label class="green">+<%=ex.amount %></label>
                                <%
                            } else if(ex.type=="debit"){
                                %>
                                <label class="red">-<%=ex.amount %></label>
                            <%
                            }

                            %>
                        </td>
                        <!-- <td><a href="">Delete</a>/<a href="">Update</a></td> -->
                    </tr>
                        
                    <%
                })
            %>

        </table>
    </div>
    
    </div>
</body>
</html>